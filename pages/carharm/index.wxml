 <view class="box">
    <view class="table">
      <view class="tr bg-w">
        <view class="th ">部位</view>
        <view class="th">配件费(元)</view>
        <view class="th ">工时费(元)</view>
      </view>
    <block wx:for="{{harmData}}" wx:key="{{code}}">
      <view class="tr" >
        <view class="td ">{{item.partName}}</view>
        <view class="td">{{item.partPrice}}</view>
        <view class="td">{{item.hourPrice}}</view>
      </view>   
    </block>
    <view class="tr">
      <view class="td ">小计</view>
      <view class="td">{{totalAccessoriesCost}}</view>
      <view class="td">{{totalManhourCost}}</view>
    </view>
    <view class="totalNum">
     合计：{{totalnum}}
     
    </view>
  </view>
</view>
