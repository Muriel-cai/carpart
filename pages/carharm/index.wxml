<view class="container">
  <view class="swiperBox ">
  <swiper
    indicator-dots="{{indicatorDots}}"
    interval="{{interval}}"
    duration="{{duration}}"
    current="{{currentTab}}" 
    style='height:{{height}}'
    bindchange="swiperTab"
    previous-margin="30rpx"
    next-margin="30rpx"
  >
    <block wx:for="{{listData}}">
      <swiper-item class= "swiper-item">
      <view class="mainBox" >
        <view class="conbox">
          <image  class="picBix slide-image" src="{{item.imageUrl}}"
          style=" display:block;" />
        </view>
        <view class="table">
          <view class="tr1">
            <view class="th w50">损伤部位</view>
            <view class="th w50">损伤类型</view>
          </view>
          <block wx:for="{{item.list}}" wx:for-item="list">
            <view class="tr1" >
              <view class="td w50 ">{{list.partName}}</view>
              <view class="td w50">{{list.injuredType}}</view>
          
            </view>
          </block>  
        </view>
        </view> 
      </swiper-item>
    </block>
  </swiper>
  </view>
